<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.splass.choirul.splass.Menu">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        app:srcCompat="@drawable/icon2" />


    <ImageButton
        android:id="@+id/btnCarnivora"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginStart="21dp"
        android:scaleType="fitCenter"
        android:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/icon5" />

    <ImageButton
        android:id="@+id/btnHerbivora"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/textView6"
        android:backgroundTint="@color/colorPrimary"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/icon6" />

    <ImageButton
        android:id="@+id/btnOmnivora"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorPrimary"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/icon7" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCarnivora"
        android:layout_toStartOf="@+id/btnOmnivora"
        android:gravity="center"
        android:text="Carnivora"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnHerbivora"
        android:layout_toEndOf="@+id/btnOmnivora"
        android:gravity="center"
        android:text="Herbivora"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnOmnivora"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Omnivora"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="10sp"
        android:textStyle="italic"
        android:text='" Jangan Banggakan Apa Yang Kamu Punya Banggakan Bagaimana Caramu Mendapatkan Apa Yang Kamu Punya "' />
</RelativeLayout>
